<h1>All available events!</h1>
<% if user_signed_in? %>
    <p><%= link_to "logout", destroy_user_session_path, method: :delete, data: { turbo_method: :delete } %></p>
    <p>Events you associated with. <%= link_to "here.", users_show_path %> </p>
<% else %>
    <p><%= link_to "signin", new_user_session_path %> </p>
<% end %>

<h3>Upcoming Events</h3>

<% @events.past.each do |event| %>
    <div>
        <%= render "single_event", event: event %>
        <div><%= link_to "this event", event %></div>
        <br>
    </div>
<% end %>

<h3>Past Events</h3>

<% @events.upcoming.each do |event| %>
    <div>
        <%= render "single_event", event: event %>
        <div><%= link_to "this event", event %></div>
        <br>
    </div>
<% end %>

<% if user_signed_in? %>
    <br>
    <%= link_to "New Event", new_event_path %>
<% end %>